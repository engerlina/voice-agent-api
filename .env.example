# Trvel FastAPI Configuration
# Copy this file to .env and fill in your values

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================
APP_NAME=Trvel API
APP_ENV=development
DEBUG=true
API_V1_PREFIX=/api/v1
SECRET_KEY=your-super-secret-key-change-in-production

# =============================================================================
# DATABASE (Supabase PostgreSQL)
# =============================================================================
# Get from: Supabase Dashboard → Settings → Database → Connection string
# Use the "URI" format and add ?sslmode=require for production
DATABASE_URL=postgresql+asyncpg://postgres:your-password@db.your-project.supabase.co:5432/postgres

# =============================================================================
# STRIPE (Payment Processing)
# =============================================================================
# Get from: https://dashboard.stripe.com/apikeys
STRIPE_SECRET_KEY=sk_test_your-stripe-secret-key
STRIPE_WEBHOOK_SECRET=whsec_your-webhook-secret

# Test mode keys (optional - for development)
TEST_STRIPE_SECRET_KEY=sk_test_your-test-key
TEST_STRIPE_WEBHOOK_SECRET=whsec_your-test-webhook-secret
TEST_MODE=false

# =============================================================================
# eSIM GO (eSIM Provider)
# =============================================================================
# Get from: eSIM Go partner dashboard
ESIMGO_API_KEY=your-esim-go-api-key

# =============================================================================
# EMAIL (Resend)
# =============================================================================
# Get from: https://resend.com/api-keys
RESEND_API_KEY=re_your-resend-api-key
RESEND_FROM_EMAIL=hello@trvel.co
RESEND_FROM_NAME=Trvel

# =============================================================================
# SMS (Twilio) - Optional fallback for QR delivery
# =============================================================================
# Get from: https://console.twilio.com
TWILIO_ACCOUNT_SID=ACyour-account-sid
TWILIO_AUTH_TOKEN=your-auth-token
TWILIO_PHONE_NUMBER=+1234567890

# =============================================================================
# TELEGRAM (Alerts & Notifications)
# =============================================================================
# Get from: @BotFather on Telegram
TELEGRAM_BOT_TOKEN=your-bot-token
TELEGRAM_ALERTS_CHAT_ID=your-chat-id
TELEGRAM_SUPPORT_CHAT_ID=your-support-chat-id

# =============================================================================
# AI SERVICES (for support triage)
# =============================================================================
OPENAI_API_KEY=sk-your-openai-api-key
ANTHROPIC_API_KEY=sk-ant-your-anthropic-api-key

# =============================================================================
# API AUTHENTICATION
# =============================================================================
API_KEY_HEADER=x-api-key
API_KEYS=key1,key2,key3

# =============================================================================
# SLA CONFIGURATION
# =============================================================================
SLA_QR_DELIVERY_SECONDS=30
SLA_SUPPORT_RESPONSE_MINUTES=3
SLA_CONNECTION_GUARANTEE_MINUTES=10

# =============================================================================
# VOICE AGENT SETTINGS
# =============================================================================

# Redis (for voice session state)
REDIS_URL=redis://localhost:6379/0

# LiveKit (Real-time voice)
# Get from: https://cloud.livekit.io or self-host
LIVEKIT_URL=wss://your-project.livekit.cloud
LIVEKIT_API_KEY=APIxxxxxxxxxxxxxxxx
LIVEKIT_API_SECRET=your-livekit-secret

# Deepgram (Speech-to-Text)
# Get from: https://console.deepgram.com
DEEPGRAM_API_KEY=your-deepgram-api-key

# ElevenLabs (Text-to-Speech)
# Get from: https://elevenlabs.io
ELEVENLABS_API_KEY=your-elevenlabs-api-key
ELEVENLABS_VOICE_ID=21m00Tcm4TlvDq8ikWAM

# OpenAI (for LLM and embeddings)
OPENAI_EMBEDDING_MODEL=text-embedding-3-large
OPENAI_MODEL=gpt-4o-mini

# Vector Store (Pinecone for RAG)
# Multi-tenant isolation via namespaces (each tenant gets own namespace)
VECTOR_STORE_TYPE=pinecone
PINECONE_API_KEY=your-pinecone-api-key
PINECONE_URL=https://your-index.svc.region.pinecone.io

# JWT Settings (for voice agent auth)
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW_SECONDS=60
